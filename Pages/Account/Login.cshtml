@page
@model WebApp.Pages.Account.Login
@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<div class="container border" style="padding:20px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group column p-3">

            <div class="col-3 row">
                <label asp-for="Credential.Username"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Username" class="form-control mt-2">
            </div>
            <span class="text-danger" asp-validation-for="Credential.Username"></span>

            <div class="col-3">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" class="form-control mt-2">
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>

            <div>
                <input type="submit" class="btn btn-primary mt-2" value="Login">
            </div>

        </div>
    </form>
</div>